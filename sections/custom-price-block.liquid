<script>
  document.addEventListener("DOMContentLoaded", () => {
    const promoHeadings = document.querySelectorAll('h1.promo-heading');

    promoHeadings.forEach((heading) => {
      const textLength = heading.textContent.length;

      // Adjust font size dynamically based on the text length
      if (textLength > 20) {
        heading.style.fontSize = '12px'; // Reduce font size for longer text
      } else if (textLength <= 10) {
        heading.style.fontSize = '24px'; // Increase font size for shorter text
      } else {
        heading.style.fontSize = '16px'; // Default size for medium-length text
      }

      // Ensure proper alignment and line spacing
      heading.style.lineHeight = '1.2'; // Adjust line height
      heading.style.textAlign = 'center'; // Center align text
    });
  });
</script>
